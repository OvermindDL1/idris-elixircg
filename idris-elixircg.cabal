Name:           idris-elixircg
Version:        0.0.0.1
License:        BSD3
License-file:   CRAPL-LICENSE.txt
Author:         OvermindDL1
Maintainer:	    OvermindDL1 <overminddl1@gmail.com>
Build-Type:	    Simple
Cabal-Version:  >= 1.8

Executable idris-elixircg
  Main-is:        Main.hs
  hs-source-dirs: src

  Build-depends:  idris
                , base
                , containers
                , directory
                , filepath
                , haskeline >= 0.7
                , mtl
                , transformers
                , uniplate
                , text

  other-modules:  IRTS.CodegenElixir
                , Paths_idris_elixircg
                , IRTS.Elixir.AST
                , IRTS.Elixir.Codegen
                , IRTS.Elixir.LangTransforms

  if os(linux)
     cpp-options:   -DLINUX
     build-depends: unix < 2.8
  if os(freebsd)
     cpp-options:   -DFREEBSD
     build-depends: unix < 2.8
  if os(dragonfly)
     cpp-options:   -DDRAGONFLY
     build-depends: unix < 2.8
  if os(darwin)
     cpp-options:   -DMACOSX
     build-depends: unix < 2.8
  if os(windows)
     cpp-options:   -DWINDOWS
     build-depends: Win32 < 2.4

  ghc-prof-options: -auto-all -caf-all
  ghc-options:      -threaded -rtsopts -funbox-strict-fields
